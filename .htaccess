# Mengaktifkan Rewrite Engine
RewriteEngine On

# Mengatur index.html sebagai halaman default tanpa perlu menuliskan 'index.html' di URL
DirectoryIndex index.php

# Mengalihkan 'index.html' ke root URL (menghapus 'index.html' dari URL)
RewriteCond %{THE_REQUEST} /index\.php [NC]
RewriteRule ^(.*)index\.html$ /$1 [R=301,L]
